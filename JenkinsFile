pipeline {
    agent any

    stages {
        stage('Stop old process') {
            steps {
                echo 'Stopping any old Node.js process...'
                bat 'taskkill /IM node.exe /F || exit 0'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000 (background)...'
                // Start minimized, detached from Jenkins
                bat 'start /MIN cmd /c "node index.js > output.log 2>&1"'
                echo '✅ Node app started in background — check output.log for details.'
            }
        }
    }
}
