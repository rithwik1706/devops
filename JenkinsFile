pipeline {
    agent any

    stages {
        stage('Stop old process') {
            steps {
                bat 'taskkill /IM node.exe /F || exit 0'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000...'
                bat 'start "" cmd /c "npm start"'
            }
        }
    }
}
