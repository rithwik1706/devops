pipeline {
    agent any

    stages {
        stage('Stop old process') {
            steps {
                echo 'Stopping any old Node.js process...'
                bat 'taskkill /IM node.exe /F || exit 0'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000 (background)...'
                bat 'start /B cmd /c "npm start"'
                bat 'ping 127.0.0.1 -n 6 >NUL'
                echo 'âœ… Node app should now be running on http://localhost:3000'
            }
        }
    }
}
