pipeline {
    agent any

    stages {
        stage('Stop old process') {
            steps {
                bat 'taskkill /IM node.exe /F || exit 0'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000 (detached)...'
                bat 'start cmd /c "npm start > output.log 2>&1"'
                echo 'âœ… Node app started in background on port 3000'
            }
        }
    }
}
