pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000...'
                // Start Node.js in new window (Windows)
                bat 'start "" cmd /c "npm start"'
            }
        }
    }
}
