pipeline {
    agent any

    stages {
        stage('Stop old process') {
            steps {
                echo 'Stopping any old Node.js process...'
                bat 'taskkill /IM node.exe /F || exit 0'
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'Installing Node modules...'
                bat 'npm install'
            }
        }

        stage('Run App') {
            steps {
                echo 'Starting Node app on port 3000 (background)...'
                bat '''
                start "NodeServer" cmd /c "node index.js > output.log 2>&1"
                timeout /t 5 /nobreak >nul
                '''
                echo '✅ Node app should now be running on http://localhost:3000'
            }
        }

        stage('Verify Process') {
            steps {
                bat 'tasklist | find "node.exe" || echo ❌ Node.js not running!'
            }
        }
    }
}
